<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>

<body>
    <!-- OVO JE DEO ZA NAVIGACIJU -->
    <nav class="navbar navbar-default navbar-static-top" style="margin-bottom:0px;opacity:1; background-color: white; z-index:100;">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="icon-bar" style="background-color:#337ab7;"></span>
                    <span class="icon-bar" style="background-color:#337ab7;"></span>
                    <span class="icon-bar" style="background-color:#337ab7;"></span>
                </button>
                <a class="navbar-brand" href="#" style="color:#337ab7;"> PlanArt </a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right" style="text-align:center;">

                    @if (System.IO.Path.GetFileName(Request.Url.AbsolutePath) == "LogIn")
                    {

                        <li>@Html.ActionLink("Registration", "Registration", "Registration")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log In", "LogIn", "LogIn")</li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <!-- KRAJ DELA ZA NAVIGACIJU -->
    
    <div class="container-fluid" style="overflow-x:hidden;">
        @RenderBody()
    </div>
    <!-- KRAJ GLAVNOG SADRZAJA ZA SAJT -->
</body>
</html>
